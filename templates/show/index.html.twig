{% extends 'base.html.twig' %}

{% block title %}Tous les produits{% endblock %}

{% block body %}

 <div class="container mt-5">




    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">

            <div class="bg-light py-3 px-3" style = " border: 1px solid black">
                <h1 style = "text-align:center">
                    Tous les produits
                </h1>
    
{% for produits in product %}
    
        <dl class="row">
            <dt class="col-md-4">Nom</dt>
            <dd class="col-md-8">{{ produits.name }}</dd>
            <dt class="col-md-4">Prix </dt>
            <dd class="col-md-8">{{produits.price}}&euro;</dd>
            <dt class="col-md-4">Description</dt>
            <dd class="col-md-8"> {{produits.description}}</dd>
            <dt class="col-md-4">Marque </dt>
            <dd class="col-md-8"> {{produits.brand}} </dd>
            <dt class="col-md-4">Categorie </dt>
            <dd class="col-md-8"> {{produits.categories.name}} </dd>

            <div class = "ml-auto"> <a href = "{{path('product_delete', {'id': produits.id})}}" class = "btn btn-danger" onclick ="return confirm(`Etes vous sur de vouloir supprimer le produit`)">Supprimer </a></div>

            <div class = "ml-auto"> <a href = "{{path('product_edit', {'id': produits.id})}}" class = "btn btn-primary">Editer </a></div>

            

           
        </dl>

        <hr>

        {% endfor %}
    </div>

    <div style ="text-align:center" class = "mt-5"> <a href = "{{path('product')}}" class = "btn btn-success">ajouter un produit </a></div>
</div>
</div>
</div>
</div>

{% endblock %}
